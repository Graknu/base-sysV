version=2.29.2

source=(http://yaolinux.techozor.fr/sources-base/util-linux-$version.tar.xz)

build() {
cd util-linux-$version
PKG_CONFIG_PATH="" ./configure \
    --prefix=/tools \
    --build=${CLFS_HOST} \
    --host=${CLFS_TARGET} \
    --libdir='${prefix}'/lib64 \
    --disable-makeinstall-chown \
    --disable-makeinstall-setuid \
    --disable-nologin \
    --without-python
sed -i 's/-lncursesw -ltinfo/-lncurses/' Makefile
sed -i 's/LIBNCURSESW/LIBNCURSES/' config.h
make
make install
}
