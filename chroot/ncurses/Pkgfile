version=6.0

source=(http://yaolinux.techozor.fr/sources-base/ncurses-$version.tar.gz)

build() {
cd ncurses-$version
./configure \
    --prefix=/tools \
    --with-shared \
    --build=${CLFS_HOST} \
    --host=${CLFS_TARGET} \
    --without-debug \
    --without-ada \
    --enable-overwrite \
    --with-build-cc=gcc \
    --libdir=/tools/lib64
make
make install
}
