description="MPC is a C library for the arithmetic of complex numbers with arbitrarily high precision and 
correct rounding of the result."
packager="Hugo <graknu@techozor.fr>"

name=mpc
version=1.0.3
release=1

source=(http://yaolinux.techozor.fr/sources-base/$name-$version.tar.gz)

build() {
cd $name-$version
LDFLAGS="-Wl,-rpath,/cross-tools/lib" \
./configure \
    --prefix=/cross-tools \
    --disable-static \
    --with-gmp=/cross-tools \
    --with-mpfr=/cross-tools
make
make install
}
