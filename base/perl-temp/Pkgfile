description="Le paquet Perl contient le langage de rapport et d'extraction pratique"
url="https://www.perl.org/"
packager="Hugo <graknu@techozor.fr>"

name=perl-temp
version=5.26.0


source=(http://yaolinux.techozor.fr/sources-base/perl-$version.tar.xz)


build() {
cd perl-$version
sed -i 's@/usr/include@/tools/include@g' ext/Errno/Errno_pm.PL
./configure.gnu \
    --prefix=/tools \
    -Dcc="gcc ${BUILD32}"
make
make DESDIR=$PKG install
ln -sfv $PKG/tools/bin/perl /usr/bin
}

