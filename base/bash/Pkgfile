description="The Bash package contains the Bourne-Again SHell."
maintainer="Brian Fox,Chet Ramey and many more"
packager="tnut <tnut@nutyx.org>"

name=bash
version=4.4
release=3

source=(http://www.linuxfromscratch.org/patches/lfs/development/bash-$version-upstream_fixes-1.patch
	http://ftp.gnu.org/gnu/bash/bash-$version.tar.gz)

build()
{
cd bash-$version
patch -Np1 -i ../bash-$version-upstream_fixes-1.patch
./configure --prefix=/usr \
--htmldir=/usr/share/doc/bash-$version --without-bash-malloc \
--with-installed-readline
make

make DESTDIR=$PKG install

rm -rf $PKG/usr/share/info/dir

mkdir -p $PKG/bin
mv -vf $PKG/usr/bin/bash $PKG/bin
ln -s bash $PKG/bin/sh
}
