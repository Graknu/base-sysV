description="Miscellaneous system utilities for Linux (32-bit)"
packager="Hugo <graknu@techozor.fr>"

name=lib32-util-linux
version=2.29.2


source=(http://yaolinux.techozor.fr/sources-base/util-linux-$version.tar.xz)


build() {
cd util-linux-$version
CC="gcc ${BUILD32}" PKG_CONFIG_PATH="/usr/lib/pkgconfig" ./configure \
    ADJTIME_PATH=/var/lib/hwclock/adjtime \
    --libdir=/lib \
    --enable-write \
    --disable-chfn-chsh \
    --disable-login \
    --disable-nologin \
    --disable-su \
    --disable-setpriv \
    --disable-runuser \
    --docdir=/usr/share/doc/util-linux-2.29.2
make lib{uuid,blkid,fdisk,mount,smartcols}.la
make -C "util-linux-2.29.2" \
    DESTDIR=$PKG \
    install-usrlib_execLTLIBRARIES \
    install-pkgconfigDATA
}

