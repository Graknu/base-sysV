description="Library for manipulating sets and relations of integer points bounded by linear constraints"
url="http://isl.gforge.inria.fr/"
packager="Hugo <graknu@techozor.fr>"

name=lib32-isl
version=0.17.1


source=(http://yaolinux.techozor.fr/sources-base/isl-$version.tar.xz)


build() {
cd isl-$version
CC="gcc -isystem /usr/include ${BUILD32}" \
LDFLAGS="-Wl,-rpath-link,/usr/lib:/lib ${BUILD32}" \
./configure \
    --prefix=/usr \
    --host=${CLFS_TARGET32}
make
make check
make DESTDIR=$PKG install

mkdir -pv /usr/share/gdb/auto-load/usr/lib
mv -v /usr/lib/libisl*gdb.py /usr/share/gdb/auto-load/usr/lib

rm -rf $PKG/usr/{bin,include,share}
}

