description="POSIX 1003.1e capabilities"
packager="Hugo <graknu@techozor.fr>"

name=libcap
version=2.25


source=(http://yaolinux.techozor.fr/sources-base/libcap-2.25.tar.xz)


build() {
cd $name-$version
make CC="gcc ${BUILD64}"
make DESTDIR=$PKG lib=lib64 install
chmod -v 755 $PKG/lib64/libcap.so.2.25
mkdir -pv $PKG/lib64/
ln -sfv ../../lib64/$(readlink $PKG/lib64/libcap.so) $PKG/usr/lib64/libcap.so
rm -v $PKG/lib64/libcap.so
mv -v $PKG/lib64/libcap.a $PKG/usr/lib64
}

