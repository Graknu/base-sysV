description="A kernel headers"
url="http://kernel.org/"
packager="Hugo <graknu@techozor.fr>"

name=linux-headers
version=4.9


source=(http://yaolinux.techozor.fr/sources-base/linux-4.9.tar.xz
	http://yaolinux.techozor.fr/sources-base/patch-4.9.21.xz)


build() {
cd linux-$version
xzcat ../patch-4.9.21.xz | patch -Np1 -i -
make mrproper
make headers_check
make INSTALL_HDR_PATH=/usr DESTDIR=$PKG headers_install
mkdir -pv $PKG/usr/include
find $PKG/usr/include -name .install -or -name ..install.cmd | xargs rm -fv
}

