description="A kernel headers"
url="http://kernel.org/"
packager="Hugo <graknu@techozor.fr>"

name=linux-headers
version=4.9


source=(http://yaolinux.techozor.fr/sources-base/linux-4.9.tar.xz
	http://yaolinux.techozor.fr/sources-base/patch-4.9.21.xz)


build() {
cd linux-$version
xzcat ../patch-4.9.21.xz | patch -Np1 -i -
make mrproper
make headers_check
make INSTALL_HDR_PATH=dest headers_install
find dest/include \( -name .install -o -name ..install.cmd \) -delete
mkdir -p $PKG/usr/include
cp -rv dest/include/* $PKG/usr/include
}

