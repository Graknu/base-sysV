description="A generic library support script"
packager="Hugo <graknu@techozor.fr>"

name=lib32-libtool
version=2.4.6


source=(http://yaolinux.techozor.fr/sources-base/libtool-2.4.6.tar.xz)


build() {
cd libtool-$version
echo "lt_cv_sys_dlsearch_path='/lib /usr/lib /usr/local/lib /opt/lib'" > config.cache
CC="gcc ${BUILD32}" ./configure \
    --prefix=/usr \
    --cache-file=config.cache
make
make DESTDIR=$PKG install
mv -v $PKG/usr/bin/libtool{,-32}
rm -r $PKG/usr/{bin,include,man,share,lib32/libltdl.a}
}

