name=lib32-kmod
description="Linux kernel module management tools and library"
packager=rems
version=24

source=(http://www.kernel.org/pub/linux/utils/kernel/kmod/kmod-24.tar.xz)

build() {
cd kmod-$version
CC="gcc ${BUILD32}" PKG_CONFIG_PATH="/usr/lib64/pkgconfig" \
./configure \
    --prefix=/usr \
    --bindir=/bin \
    --sysconfdir=/etc \
    --with-rootlibdir=/lib \
    --libdir=/usr/lib \
    --with-zlib \
    --with-xz

make

make DESTDIR=$PKG install
rm -rf $PKG/usr/{include,share,bin}
}
